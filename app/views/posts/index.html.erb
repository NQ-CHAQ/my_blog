<div class="col-md-8">
<% @posts.each_with_index do |post| %>
<div class="article">
<h2><%= post.title %></h2>
<p><%=truncate( post.body, length: 50) %></p>
<%= link_to '続きを見る',post_path(post) , class: "btn btn-default" %>
</div>
<% end %>
</div>

<div class="col-md-4">
  <div class="thumbnail">
    <img src="<%= @author.image_url %>">
    <div class="caption">
      <h3><%= @author.name %></h3>
      <p><%= @author.description %></p>
    </div>
  </div>

<div class="list-group">
<% @posts.each_with_index do |post, index| %>
  <% break if index >= 6 %>
  <%= link_to post.title ,post_path(post) ,class: "list-group-item"%>
<% end %>
</div>
</div>

