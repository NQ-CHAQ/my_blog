<div class="col-md-8">
<% @posts.each do |post| %>
<div class="article">
<h2><%= post.title %></h2>

<p><%= post.category%> <%= post.pub_date %></p>
<p><%= truncate( post.body, length: 50) %></p>
<%= link_to '続きを見る',post_path(post) , class: "btn btn-default" %>
</div>
<% end %>
<%= paginate @posts %>
</div>

<div class="col-md-4">
  <div class="thumbnail">
    <img src="<%= @author.image_url %>">
    <div class="caption">
      <h3><%= @author.name %></h3>
      <p><%= @author.description %></p>
    </div>
  </div>

<div class="list-group">
<% @new_posts.each do |post| %>
  <%= link_to post.title ,post_path(post.id) ,class: "list-group-item"%>
<% end %>
</div>
</div>

